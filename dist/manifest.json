{
  "manifest_version": 2,
  "name": "Local Streams Remover",
  "version": "1.0",
  "description": "Removes local streams from the channels list",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "page_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html",
    "default_title": "Twitch Local Remover"
  },
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/directory/game/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "tabs",
    "*://*.twitch.tv/directory/game/*"
  ]
}